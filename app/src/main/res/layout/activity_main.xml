<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.amazon.indrajek.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="My Nanodegree Apps!"
        android:id="@+id/MyNanodegreeApps"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOCK HAWK"
        android:id="@+id/StockHawkButton"
        android:textColor="#FFFFFF"
        android:background="#2e3d49"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POPULAR MOVIES"
        android:id="@+id/button2"
        android:layout_below="@+id/textView2"
        android:clickable="true"
        android:background="#2e3d49"
        android:textColor="#FFFFFF"
        android:layout_marginTop="25dp"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE"
        android:id="@+id/button3"
        android:background="#2e3d49"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/button4"
        android:layout_marginTop="25dp"
        android:layout_alignStart="@+id/button4"
        android:layout_alignEnd="@+id/button6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO UBIQUITOUS"
        android:id="@+id/button4"
        android:background="#2e3d49"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_marginTop="25dp"
        android:layout_alignEnd="@+id/button6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/button5"
        android:background="#2e3d49"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/button"
        android:layout_marginTop="25dp"
        android:layout_alignStart="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAKE YOUR APP MATERIAL"
        android:id="@+id/button6"
        android:background="#2e3d49"
        android:textColor="#FFFFFF"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/button5"
        android:layout_alignStart="@+id/button5" />

</RelativeLayout>
